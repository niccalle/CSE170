<link rel="stylesheet" type="text/css" href="/css/stylesheet.css" >
<!--Import Google Icon Font-->
<link href="http://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<!--Import materialize.css-->
<link type="text/css" rel="stylesheet" href="css/materialize.min.css"  media="screen,projection"/>

<!--Let browser know website is optimized for mobile-->
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script type="text/javascript" src="js/materialize.min.js"></script>
<div class="navbar navbar-default navbar-fixed-top" id="navbar">
    <div class="container-fluid">
      <div class="navbar-brand navbar-left">
        Workouts
      </div>
      <div class="navbar-brand navbar-right" style="margin-left: 25px">
        <a href="/" >
          Sign Out
        </a>
      </div>
    </div>
</div>

<div class="test">

  <div class="row">
    <div class="col-xs-4">
      <div class="col-xs-4"><a href="/addWorkout"><button type="button" class="btn btn-info" id="add-exercise-btn">Add a new workout</button></a></div>
      <a class="btn-floating btn-large waves-effect waves-light red" href="/addWorkout">
        <i class="material-icons">add</i></a>
    </div>
    <div class="col-xs-8">
      <div class="col-xs-4" style="margin-left: 25px;"><a href="/workoutCalendar"><button type="button" class="btn btn-success" id="add-exercise-btn">Your Past Workouts</button></a>
      </div>
    </div>
  </div>

  <ul class="workouts" id="whole_list">
    {{#each workouts}}
        <li class="each_workout" style="background-image: url('{{this.workoutInfo.image}}');" id="workouts_list-{{@index}}">
          <a href="/workoutInfo/{{this.name}}"><label class="workout-label">{{this.name}}</label></a>
          <label class="remove-btn">x</label>
      </a>
    {{/each}}
  </ul>
</div>

<script type="text/javascript">
  var ListenerSuite = {
    removeListener: function(){
      $('.remove-btn').click(function(){
        $(this).parent().remove();
      });
    }
  }
  $(document).ready(function(){
    ListenerSuite.removeListener();
    mockhide = function(){
      console.log("hide");
      $(this).hide();

    };
    $("#add-btn").click(function(){
      var exercises = ["Jumping Jacks", "Rowing Machine", "Squats", "Balance", "Insanity", "P90X"];
      console.log("add");
      var index = parseInt(Math.random() * exercises.length);
      var phrase = exercises.splice(index, 1);
      var $clone = $("#workouts_list-0").clone()
      $clone.find(".workout_name").text(phrase);
      $clone.find(".btn-success").attr("href", "/workoutInfo/"+phrase);
      $clone.appendTo("#whole_list");
      ListenerSuite.removeListener();
    })
  })
</script>
