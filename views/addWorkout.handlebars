<script type="text/javascript">
  var ListenerSuite = {
    removeListener: function(){
      $('.remove-btn').click(function(){
        $(this).parent().remove();
      });
    }
  }
  $(document).ready(function(){
    ListenerSuite.removeListener();
    mockhide = function(){
      console.log("hide");
      $(this).hide();

    };
    $("#add-exercise-btn").click(function(){
      var $clone = $("#exercise_list-1").clone();
      $clone.find("input:text").val("");
      $clone.prop('id', 'exercise-list-' + ($("#whole_list").children().length + 1));
      // $clone.find(".workout_name").text(phrase);
      // $clone.find(".btn-success").attr("href", "/workoutInfo/"+phrase);
      $clone.appendTo("#whole_list");
      ListenerSuite.removeListener();
    })
  })
</script>